<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commonsware.com.vaccumcleanerwold.MainActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/vaccum1"
        android:layout_alignTop="@+id/dirt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/dirt1"
        android:layout_below="@+id/room_a"
        android:layout_toRightOf="@+id/vaccum1"
        android:layout_toEndOf="@+id/vaccum1" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/vaccum2"
        android:layout_alignTop="@+id/dirt2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/dirt2"
        android:layout_above="@+id/bt"
        android:layout_toRightOf="@+id/vaccum2"
        android:layout_toEndOf="@+id/vaccum2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROOM A"
        android:id="@+id/room_a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROOM B"
        android:id="@+id/room_b"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intialize the Enviornment"
        android:id="@+id/bt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
         />
</RelativeLayout>
